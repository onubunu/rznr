    <%= f.label :jobdescription %><br />
    <%= f.text_area :jobdescription %>
  </div>
  <div class="field">
    <%= f.label :validdate %><br />
    <%= f.date_select :validdate, :prompt => { :day => 'Tag', :month => 'Monat', :year => 'Jahr' } , :start_year => Date.current.year, :end_year => Date.current.year + 1 %>
