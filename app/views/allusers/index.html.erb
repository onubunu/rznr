<div class="col_w960 float_c">
  <% @allusers.sort_by{ |alluser| [alluser.created_at]  }.reverse.each do |alluser| %>
    <div align="left">
			<strong><%= alluser.email %></strong> (Anmeldungen: <%= alluser.sign_in_count %>)<br />
			Registriert seit: <%= alluser.created_at.strftime("%d.%m.%Y" + " (%H:%M Uhr)") %><br />
